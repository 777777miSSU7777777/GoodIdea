<% provide(:title, 'Editing Project') %>
<h1>Editing Project</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @post, url: {action: "update"}, :method => :POST  do |f| %>
      <%# <%= render 'shared/error_messages' %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :content, "Post Content" %>
      <%= f.cktext_area :content, placeholder: "Please put your content here..." %>

      <%= f.submit "Submit changes", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>