<%= form_for @post, url: {action: yield(:action)}, :method => :POST  do |f| %>
  <%= render 'shared/error_messages', object: @post %>

    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>

    <%= f.label :content, "Post Content" %>
    <%= f.cktext_area :content, placeholder: "Please put your content here..." %>

    <%= f.label :goal, "Money Goal" %>
    <%= f.number_field :goal%>
    
    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>