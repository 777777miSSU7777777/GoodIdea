<header class="navbar navbar-fixed-top">
  <div class="container">
    <%= link_to "Good Idea", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-left">
      <% if logged_in? %>
        <li><%= link_to "Start Project", '/projects/new', class: "hvr-shutter-out-horizontal"%></li>
        <li><%= link_to "Show Your Own Projects", '/projects/own/', class: "hvr-shutter-out-horizontal"%></li>
      <% end %>
        <li><%= link_to "Show All Projects", '/projects/', class: "hvr-shutter-out-horizontal"%></li>
      </ul>
    </nav>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li><%= link_to "All users", users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_profile_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>